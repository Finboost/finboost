<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.profile.personalData.PersonalDataActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/topAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:navigationIcon="@drawable/arrow_back"
            app:title="Data Pribadi"
            app:titleCentered="true"
            app:titleTextColor="@color/black" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBarLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20sp"
            android:paddingVertical="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/opensans_reg"
                android:textColor="@color/grey"
                android:text="ID" />

            <TextView
                android:id="@+id/tv_user_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/montserrat_med"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="25dp"
                android:text="123910301940194" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/opensans_reg"
                android:textColor="@color/grey"
                android:text="Nama Lengkap" />

            <TextView
                android:id="@+id/tv_user_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/montserrat_med"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="25dp"
                android:text="Wafie Abiyya El Hanief" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/opensans_reg"
                android:textColor="@color/grey"
                android:text="Deskripsi Diri" />

            <TextView
                android:id="@+id/tv_user_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/montserrat_med"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="25dp"
                android:text="Lorem lorem ipsum ipsum dolor lor lor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/opensans_reg"
                android:textColor="@color/grey"
                android:text="Status Pernikahan" />

            <TextView
                android:id="@+id/tv_user_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/montserrat_med"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="25dp"
                android:text="Lajang" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/opensans_reg"
                android:textColor="@color/grey"
                android:text="Pendidikan" />

            <TextView
                android:id="@+id/tv_user_education"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/montserrat_med"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="25dp"
                android:text="S1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/opensans_reg"
                android:textColor="@color/grey"
                android:text="Pekerjaan" />

            <TextView
                android:id="@+id/tv_user_work"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/montserrat_med"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="25dp"
                android:text="Pengusaha" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/opensans_reg"
                android:textColor="@color/grey"
                android:text="Jenis Investasi" />

            <TextView
                android:id="@+id/tv_user_type_investment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/montserrat_med"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="25dp"
                android:text="Saham" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/opensans_reg"
                android:textColor="@color/grey"
                android:text="Jenis Insurance" />

            <TextView
                android:id="@+id/tv_user_type_insurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/montserrat_med"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="25dp"
                android:text="Obligasi" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/opensans_reg"
                android:textColor="@color/grey"
                android:text="Pendapatan Perbulan" />

            <TextView
                android:id="@+id/tv_user_income"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/montserrat_med"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="25dp"
                android:text="@string/dummy_rp" />

            <Button
                android:id="@+id/btn_edit_data"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_filled"
                android:text="@string/ubah_data"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
