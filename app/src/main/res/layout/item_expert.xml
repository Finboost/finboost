<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_marginEnd="8dp"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Media -->
            <ImageView
                android:id="@+id/iv_expert_profile"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:contentDescription="@string/profile_expert"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/place_holder" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="10dp"
                android:paddingHorizontal="13dp"
                >

                <!-- Title, secondary and supporting text -->
                <TextView
                    android:id="@+id/tv_expert_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_sb"
                    android:text="@string/dumy_detail_text"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="13dp"

                app:flexWrap="wrap">

                <TextView
                    android:layout_width="55dp"
                    android:layout_height="20dp"
                    android:background="@drawable/card_expert_bg"
                    android:padding="2dp"
                    android:fontFamily="@font/opensans_reg"
                    android:text="Keuangan"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:textAlignment="center"
                    android:textColor="@color/main"
                    android:textSize="9sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:layout_width="55dp"
                    android:layout_height="20dp"
                    android:background="@drawable/card_expert_bg"
                    android:padding="2dp"
                    android:text="Utang"
                    android:fontFamily="@font/opensans_reg"
                    android:textAlignment="center"
                    android:textColor="@color/main"
                    android:textSize="9sp" />

                <TextView
                    android:layout_width="55dp"
                    android:layout_height="20dp"
                    android:background="@drawable/card_expert_bg"
                    android:padding="2dp"
                    android:text="Saham"
                    android:fontFamily="@font/opensans_reg"
                    android:textAlignment="center"
                    android:textColor="@color/main"
                    android:textSize="9sp" />

                <TextView
                    android:layout_width="55dp"
                    android:layout_height="20dp"
                    android:background="@drawable/card_expert_bg"
                    android:padding="2dp"
                    android:layout_marginStart="8dp"
                    android:text="Crypto"
                    android:fontFamily="@font/opensans_reg"
                    android:textAlignment="center"
                    android:textColor="@color/main"
                    android:textSize="9sp" />
            </com.google.android.flexbox.FlexboxLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="18dp"
                android:fontFamily="@font/opensans_med"
                android:paddingVertical="13dp"
                android:textColor="@color/main"
                android:textStyle="bold"
                android:text="@string/lihat_detail_expert"
                android:textSize="12sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>